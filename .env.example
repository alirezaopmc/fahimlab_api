# Development environment - copy to .env for local development
# Usage: cp .env.example .env
#
# For local dev with Docker Compose, use the DATABASE_URL below.
# The postgres service runs on localhost:5432 with these credentials.

SECRET_KEY="fahimlab-api-secret-key-unsecure-change-in-production"
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Server
PORT=8000

# Database
DATABASE_URL="postgresql://fahimlab:fahimlab@localhost:5432/fahimlab"

# CORS origins for Next.js (comma-separated)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Wagtail admin base URL (for links in emails, user bar)
# WAGTAILADMIN_BASE_URL=http://localhost:8000
